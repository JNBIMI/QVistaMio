QWidget::window, QDialog {
    background-color: solid #F4F4F4;
    margin: 2px #38474F;
} 

QvVideo, QMediaPlayer{
    background: transparent;
    margin: 0px;
    border: 0px;
}

QWidget #layoutFosc {
    background-color: #38474F solid; 
    border: 15px;
}
QWidget #layout {
    background: transparent;
    border: 0px;
}

QDockWidget{
    color: white;
    background-color: #F9F9F9;
    border: 0px;
    margin: 0px;
    titlebar-close-icon: url("Imatges/window_close.png");
    titlebar-normal-icon: url("Imatges/window-restore.png");
}

QListWidget{
    color: #38474f;
    
}

QDockWidget::title {
    background-color: #79909B;
    padding: 4px;
    /* border: 1px solid red; */
}

QDockWidget::close-button, QDockWidget::float-button  {
    color: transparent;
    background-color: transparent;
}


QDockWidget::close-button:hover, QDockWidget::float-button:hover  {
    background:  #FF6215;
}


QvLlegenda{
    background-color: #F9F9F9;
}

QFrame {
    background-color: #F9F9F9 transparent;
}

QScrollBar {
    background: #DDDDDD;
    margin: 0px;
    border: none;
}
QScrollBar::handle {
    background: #DDDDDD;
    min-height: 25px;
    border: 0px;
}
QScrollBar::sub-page {
    background: #F9F9F9;
    height: 0 px;
    border: 0px;
}
QScrollBar::add-page {
    background: #F9F9F9;
    height: 0 px;

    border: 0px;
}
QScrollArea{
	background-color: white;
	background: white;
}

QSlider{
    background: #F9F9F9;
}

/* QSlider::groove:horizontal{
    
} */

/* QSlider::handle:horizontal{
    background: #FF6215;
} */

QSlider::add-page:horizontal {
    background: #FF6215;
}

QLabel {
    background-color: #F9F9F9 transparent;
    color: #38474F;
    margin: 0px;
    border: 0px;
}

QLabel#fosca{
    background-color: #38474F solid;
    color: #F9F9F9;
    border: 0px;
}

QLineEdit {
    border: 1px solid #DDDDDD; 
    background-color: white;
}

QTextEdit {
    border:1px solid #DDDDDD;
    background-color: white;
}

QTextEdit[readOnly="true"] {
    /* margin: 15px; */
    /* background-color: #F9F9F9; */
    border: 0px;
    background-color: transparent;
}

QLineEdit[readOnly="true"] {
    border: #38474F;
    background-color: #F9F9F9
}

QSpinBox {
    background: #F9F9F9;
    color: #38474F;
    /* border: 1px solid #38474F; */
    border: 0px;
    padding: 3px 3px;

}

QSpinBox::up-button, QSpinBox::down-button {
     subcontrol-origin: border;
     padding-left: 0px;
     border-width: 1px;
     border-radius: 1px;
     background-color: transparent;
     
}

QSpinBox::up-button {
    subcontrol-position: top right; 
}


QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #bbbbbb;
}

QSpinBox::up-arrow, QSpinBox::down-arrow {
     width: 7px;
     height: 7px;
     border: none;
}

QSpinBox::up-arrow:disabled, QSpinBox::down-arrow:disabled {
    image: none;
}


QSpinBox::up-arrow {
     image: url(imatges/spinbox-up.png);
}
QSpinBox::down-arrow {
     image: url(imatges/spinbox-down.png);
}




