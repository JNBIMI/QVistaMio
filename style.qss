QAbstractItemView {
    color: #38474F;
}

QTableView {
    background-color: solid white;
    selection-background-color: #FF6215;
    color: #38474F;
    border: 1px solid #38474F;
}

QTableView::item {
    background-color: solid white;
}

QTableView QTableCornerButton::section {
    background-color: solid white;
    border: 0px;
}

QHeaderView::section{
    background: solid;
}

QProgressBar {
    background-color: #38474F;
    color: #F9F9F9;
    text-align: center;
}

QProgressBar::chunk{
    background-color: #FF6215;
    color: #F9F9F9;
}

