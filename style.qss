QStatusBar {
    background-color: #DDDDDD;
}

QMenuBar {
    background-color: #38474F;
    color: #F9F9F9;
}

QMenuBar::item {
    margin-right: 50px;
    padding: 4px 10px 4px 10px;
}

/* QMenuBar::item:hover{
    background-color: #FF6215;
    color: #F9F9F9;
} */

QMenuBar::item:selected{
    background-color: #FF6215;
    color: #F9F9F9;
}

QMenuBar::item:pressed{
    background-color: #DDDDDD;
    color: #38474F;
}

QMenu{
    background-color: #DDDDDD;
    color: #38474F;
}

QMenu::item:selected{
    background-color: #FF6215;
    color: #F9F9F9;
}

QStatusBar{
    padding: 0px;
}

