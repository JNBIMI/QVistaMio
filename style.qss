QvPushButton {
    background-color: #F9F9F9 transparent;
    color: #38474F;
    margin: 0px;
    border: 0px;
}

QvPushButton:checked{
    background-color: #DDDDDD;
    color: #38474F;
	border: 1px solid #FF6215;
	padding: 2px 2px;
} 

